{
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/agent-sessions-notify.sh working"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/agent-sessions-notify.sh idle"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/agent-sessions-notify.sh awaiting_permission"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/agent-sessions-notify.sh idle"
          }
        ]
      },
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/scripts/agent-sessions-notify.sh awaiting_permission"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(~/.claude/skills/:*)",
      "Bash(bun add:*)",
      "Bash(bun test:*)",
      "Bash(cat:*)",
      "Bash(curl:*)",
      "Bash(echo:*)",
      "Bash(env)",
      "Bash(find:*)",
      "Bash(gh issue view:*)",
      "Bash(gh label list:*)",
      "Bash(gh repo view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh release list:*)",
      "Bash(gh release view:*)",
      "Bash(gh run list:*)",
      "Bash(gh search issues:*)",
      "Bash(gh search prs:*)",
      "Bash(git add:*)",
      "Bash(git describe:*)",
      "Bash(git grep:*)",
      "Bash(git log:*)",
      "Bash(git mv:*)",
      "Bash(git tag:*)",
      "Bash(go build:*)",
      "Bash(go doc:*)",
      "Bash(go fmt:*)",
      "Bash(go get:*)",
      "Bash(go mod:*)",
      "Bash(go test:*)",
      "Bash(go run:*)",
      "Bash(git show:*)",
      "Bash(go test:*)",
      "Bash(go tool cover:*)",
      "Bash(go vet:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(jar:*)",
      "Bash(java:*)",
      "Bash(jq:*)",
      "Bash(ln:*)",
      "Bash(ls:*)",
      "Bash(make test:*)",
      "Bash(mvn compile:*)",
      "Bash(mvn dependency:sources:*)",
      "Bash(mvn test:*)",
      "Bash(mvn verify:*)",
      "Bash(./mvnw mvn compile:*)",
      "Bash(./mvnw mvn dependency:sources:*)",
      "Bash(./mvnw mvn test:*)",
      "Bash(./mvnw mvn verify:*)",
      "Bash(npm audit:*)",
      "Bash(npm install)",
      "Bash(npm outdated:*)",
      "Bash(npm run build:*)",
      "Bash(npm run eslint:*)",
      "Bash(npm run prettier:*)",
      "Bash(npm test:*)",
      "Bash(readlink:*)",
      "Bash(npm view:*)",
      "Bash(npm why:*)",
      "Bash(tee:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "WebFetch(domain:bun.sh)",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:github.io)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebFetch(domain:pkg.go.dev)",
      "WebFetch(domain:search.google.com)",
      "WebFetch(domain:www.google.com)",
      "WebFetch(domain:mvnrepository.com)",
      "WebSearch"
    ],
    "deny": [],
    "ask": []
  },
  "enabledPlugins": {
    "gopls-lsp@claude-plugins-official": true
  }
}
